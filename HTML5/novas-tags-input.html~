<!doctype html>

<html lang="pt-br">

	<head>
	
		<title>Novas Tags Input Html5</title>
		<meta charset="utf-8"/>

				
	</head>
	

	<body>
	
	<form>
	
		<!-- Associar label com os elementos --- boa prática --- -->
		<label for="nome">Nome</label>
		<input type="text" id="nome"/ > 
		<br><br>
	
		
		<!-- Novos inputs e atributos HTML5 -->
		
		<!-- E-mail Atributo required -->
		<label for="email">E-mail</label>
		<input type="email" id="email" placeholder="email@email.com" autofocus>
		<br><br>
		
		<!-- Número -->
		<label for="numero">Número</label>
		<input type="number" id="numero" min="5" max="10" step="2"/>
		<br><br>
		
		<!-- URL -->
		<label for="url">URL</label>
		<input type="url" id="url" placeholder="ex: http://www.google.com" />
		<br><br>
		
		<!-- Pesquisar -->
		<label for="pesquisa">Pesquisa</label>
		<input type="search" id="pesquisa" placeholder="Digite algo..." />
		<br><br>
		
		<!-- Range -->
		<label for="range">Range</label>
		<input type="range" id="range" min="0" max="10" value="5"/>
		<br><br>
		
		<!-- Data -->
		<label for="data">Range</label>
		<input type="date" id="data"/>
		<br><br>
		
		<!-- Cor -->
		<label for="cor">Cor</label>
		<input type="color" id="cor"/>
		<br><br>
		
		
		
		
		<input type="submit" value="enviar"/>		
		
	</form>


	</body>

</html>